<p id="notice"><%= notice %></p>

<h1>Listing Admin Memberships</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.title %></td>
        <td><%= membership.description %></td>
        <td><%= membership.price %></td>
        <td><%= link_to 'Show', admin_membership_path(membership) %></td>
        <td><%= link_to 'Edit', edit_admin_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', admin_membership_path(membership), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

